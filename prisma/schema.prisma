datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
  notes    Note[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Note {
  id    String @id @default(cuid())
  title String @default("")
  body  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Station {
  id    String @id @default(cuid())
  name  String

  gatewayInfo String
  state StationState
  lastReceivedDataAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  data StationData[]
}

model StationData {
  id    DateTime @id @default(now())
  stationId String
  station Station @relation(fields: [stationId], references: [id])

  humidity Float
  temperature Float
}

enum StationState {
    REGISTERED
    ACTIVE
    INACTIVE
}